{
  "title": "TEMExperimentDataSet",
  "description": "Visual data collected from a transmission electron microscopy\nexperiment in a single grain of a sample.",
  "type": "object",
  "properties": {
    "author": {
      "title": "Author",
      "description": "Person who designed and/or performed the experiment.",
      "type": "string"
    },
    "authorORCID": {
      "title": "Authororcid",
      "description": "ORCID of author.",
      "type": "string"
    },
    "authorEmail": {
      "title": "Authoremail",
      "description": "E-mail of author",
      "type": "string",
      "pattern": "^[^@]+@[^@]+$"
    },
    "description": {
      "title": "Description",
      "description": "Informative high-level description of the objective and setup of the experiment.",
      "minLength": 100,
      "type": "string"
    },
    "notes": {
      "title": "Notes",
      "description": "Additional information or clarifications concerning the setup and conventions of experiment.",
      "type": "string"
    },
    "sampleId": {
      "title": "Sampleid",
      "description": "Name or identifier of the sample used in the experiment.",
      "type": "string"
    },
    "composition": {
      "title": "Composition",
      "description": "Chemical composition of the sample.",
      "type": "string"
    },
    "sampleSize": {
      "title": "Samplesize",
      "description": "Dimensions of the sample in (\u00b5m).",
      "allOf": [
        {
          "$ref": "#/definitions/Dim3D"
        }
      ]
    },
    "crystalStructure": {
      "description": "Crystal structure of the sample (FCC, BCC, HCP).",
      "allOf": [
        {
          "$ref": "#/definitions/TEMCrystalStructure"
        }
      ]
    },
    "latticeParamLength": {
      "title": "Latticeparamlength",
      "description": "Lengths a,b,c of the lattice parameter (nm).",
      "allOf": [
        {
          "$ref": "#/definitions/Dim3D"
        }
      ]
    },
    "latticeParamAngle": {
      "title": "Latticeparamangle",
      "description": "Angles alpha,beta,gamma of the lattice parameter (degrees).",
      "allOf": [
        {
          "$ref": "#/definitions/TEMLatticeAngles"
        }
      ]
    }
  },
  "required": [
    "author",
    "authorORCID",
    "description",
    "sampleId",
    "composition",
    "crystalStructure",
    "latticeParamLength",
    "latticeParamAngle",
    "dataFiles"
  ],
  "definitions": {
    "Dim3D": {
      "title": "Dim3D",
      "description": "Dimensions of a 3D object.",
      "type": "object",
      "properties": {
        "width": {
          "title": "Width",
          "description": "Size along x axis.",
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "height": {
          "title": "Height",
          "description": "Size along y axis.",
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "length": {
          "title": "Length",
          "description": "Size along z axis.",
          "exclusiveMinimum": 0,
          "type": "number"
        }
      },
      "required": [
        "width",
        "height",
        "length"
      ]
    },
    "TEMCrystalStructure": {
      "title": "TEMCrystalStructure",
      "description": "An enumeration.",
      "enum": [
        "Face-Centered Cubic",
        "Body-Centered Cubic",
        "Hexagonal Close-Packed",
        "Other"
      ]
    },
    "TEMLatticeAngles": {
      "title": "TEMLatticeAngles",
      "type": "object",
      "properties": {
        "alpha": {
          "title": "Alpha",
          "minimum": 0,
          "maximum": 180,
          "type": "number"
        },
        "beta": {
          "title": "Beta",
          "minimum": 0,
          "maximum": 180,
          "type": "number"
        },
        "gamma": {
          "title": "Gamma",
          "minimum": 0,
          "maximum": 180,
          "type": "number"
        }
      },
      "required": [
        "alpha",
        "beta",
        "gamma"
      ]
    },
    "EulerAngles": {
      "title": "EulerAngles",
      "description": "Euler angles of the grain in degrees (\u03c61 : 0-360\u00b0, \u03c6 : 0-180\u00b0, \u03c62 : 0-360\u00b0)",
      "type": "object",
      "properties": {
        "phi1": {
          "title": "Phi1",
          "exclusiveMaximum": 360,
          "minimum": 0,
          "type": "number"
        },
        "phi": {
          "title": "Phi",
          "exclusiveMaximum": 180,
          "minimum": 0,
          "type": "number"
        },
        "phi2": {
          "title": "Phi2",
          "exclusiveMaximum": 360,
          "minimum": 0,
          "type": "number"
        }
      },
      "required": [
        "phi1",
        "phi",
        "phi2"
      ]
    },
    "CrystalVec": {
      "title": "CrystalVec",
      "description": "Crystallographic vector given as Miller index (h, k, l).",
      "type": "string",
      "pattern": "^-?\\d,\\s*-?\\d+,\\s*-?\\d+$"
    },
    "LocatedSlipSystem": {
      "title": "LocatedSlipSystem",
      "description": "Information about a slip system in an experiment setup.",
      "type": "object",
      "properties": {
        "burgersVector": {
          "title": "Burgersvector",
          "description": "Burgers vector (h, k, l)",
          "allOf": [
            {
              "$ref": "#/definitions/CrystalVec"
            }
          ]
        },
        "slipPlane": {
          "title": "Slipplane",
          "description": "Slip plane normal vector (h, k, l)",
          "allOf": [
            {
              "$ref": "#/definitions/CrystalVec"
            }
          ]
        },
        "schmidFactor": {
          "title": "Schmidfactor",
          "description": "Schmid factor",
          "type": "number"
        },
        "gVector": {
          "title": "Gvector",
          "description": "Diffraction vector (h, k, l)",
          "allOf": [
            {
              "$ref": "#/definitions/CrystalVec"
            }
          ]
        },
        "planeAngle": {
          "title": "Planeangle",
          "description": "Angle (\u03b1) in degrees between image plane and slip plane",
          "exclusiveMinimum": -360,
          "exclusiveMaximum": 360,
          "type": "number"
        }
      },
      "required": [
        "burgersVector",
        "slipPlane",
        "schmidFactor",
        "gVector",
        "planeAngle"
      ]
    },
    "Pos2D": {
      "title": "Pos2D",
      "description": "Position in 2D space.",
      "type": "object",
      "properties": {
        "x": {
          "title": "X",
          "type": "number"
        },
        "y": {
          "title": "Y",
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ]
    },
    "TEMExperimentImage": {
      "title": "TEMExperimentImage",
      "description": "Image snapshot of TEM experiment.",
      "type": "object",
      "properties": {
        "description": {
          "title": "Description",
          "description": "Description of what is seen in this file.",
          "minLength": 1,
          "type": "string"
        },
        "date": {
          "title": "Date",
          "description": "Date on which the experiment has been performed.",
          "type": "string",
          "pattern": "^([12]\\d{3}-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01]))$"
        },
        "temperature": {
          "title": "Temperature",
          "description": "Temperature of sample during experiment (K).",
          "minimum": 0,
          "type": "number"
        },
        "unitScale": {
          "title": "Unitscale",
          "description": "Unit scale (\u00b5m/pixel)",
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "magnification": {
          "title": "Magnification",
          "description": "Magnification (Kx)",
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "tiltAngle": {
          "title": "Tiltangle",
          "description": "Tilt around Y-axis in degrees(right-hand (TODO: confirm?), positive=clockwise)",
          "exclusiveMinimum": -360,
          "exclusiveMaximum": 360,
          "type": "number"
        },
        "eulerAngles": {
          "$ref": "#/definitions/EulerAngles"
        },
        "elongation": {
          "title": "Elongation",
          "description": "Elongation in \u00b5m(positive = increase in y axis from pulling)",
          "type": "number"
        },
        "appliedStress": {
          "title": "Appliedstress",
          "description": "Applied stress in MPa (positive = pressure)",
          "type": "number"
        },
        "slipSystems": {
          "title": "Slipsystems",
          "description": "Relevant slip systems (TODO: better description?)",
          "type": "array",
          "items": {
            "$ref": "#/definitions/LocatedSlipSystem"
          }
        },
        "center": {
          "title": "Center",
          "description": "Center of the image (X,Y) in TODO unit(wrt. fixed reference point in sample)",
          "allOf": [
            {
              "$ref": "#/definitions/Pos2D"
            }
          ]
        },
        "pileupPos": {
          "title": "Pileuppos",
          "description": "Position of pile-up (X,Y) in TODO unit(wrt. fixed reference point in sample)",
          "allOf": [
            {
              "$ref": "#/definitions/Pos2D"
            }
          ]
        }
      },
      "required": [
        "description",
        "date",
        "temperature",
        "unitScale",
        "tiltAngle",
        "eulerAngles",
        "elongation",
        "slipSystems"
      ]
    },
    "TEMExperimentVideo": {
      "title": "TEMExperimentVideo",
      "description": "Video recording of TEM experiment.",
      "type": "object",
      "properties": {
        "description": {
          "title": "Description",
          "description": "Description of what is seen in this file.",
          "minLength": 1,
          "type": "string"
        },
        "date": {
          "title": "Date",
          "description": "Date on which the experiment has been performed.",
          "type": "string",
          "pattern": "^([12]\\d{3}-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01]))$"
        },
        "temperature": {
          "title": "Temperature",
          "description": "Temperature of sample during experiment (K).",
          "minimum": 0,
          "type": "number"
        },
        "unitScale": {
          "title": "Unitscale",
          "description": "Unit scale (\u00b5m/pixel)",
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "magnification": {
          "title": "Magnification",
          "description": "Magnification (Kx)",
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "tiltAngle": {
          "title": "Tiltangle",
          "description": "Tilt around Y-axis in degrees(right-hand (TODO: confirm?), positive=clockwise)",
          "exclusiveMinimum": -360,
          "exclusiveMaximum": 360,
          "type": "number"
        },
        "eulerAngles": {
          "$ref": "#/definitions/EulerAngles"
        },
        "elongation": {
          "title": "Elongation",
          "description": "Elongation in \u00b5m(positive = increase in y axis from pulling)",
          "type": "number"
        },
        "appliedStress": {
          "title": "Appliedstress",
          "description": "Applied stress in MPa (positive = pressure)",
          "type": "number"
        },
        "slipSystems": {
          "title": "Slipsystems",
          "description": "Relevant slip systems (TODO: better description?)",
          "type": "array",
          "items": {
            "$ref": "#/definitions/LocatedSlipSystem"
          }
        },
        "cutStart": {
          "title": "Cutstart",
          "description": "Start time (wrt. source video)",
          "type": "string",
          "pattern": "^(\\d{2}:)?\\d{2}:\\d{2}$"
        },
        "cutEnd": {
          "title": "Cutend",
          "description": "End time (wrt. source video)",
          "type": "string",
          "pattern": "^(\\d{2}:)?\\d{2}:\\d{2}$"
        },
        "speed": {
          "title": "Speed",
          "description": "Speed of video (multiplier wrt. source video)",
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "framerate": {
          "title": "Framerate",
          "description": "Framerate (per sec) of the video",
          "exclusiveMinimum": 0,
          "type": "integer"
        }
      },
      "required": [
        "description",
        "date",
        "temperature",
        "unitScale",
        "tiltAngle",
        "eulerAngles",
        "elongation",
        "slipSystems",
        "cutStart",
        "cutEnd",
        "speed",
        "framerate"
      ]
    }
  }
}
